    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch loop-convert",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/loop-convert.exe",
            "args": [
                "../example-loop-convert/test.cpp",
                "--"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/bin",
            "environment": [],
            "console": "integratedTerminal"
        },
        {
            "name": "(Windows) Launch comment-parser",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/comment-parser-association.exe",
            "args": [
                "test-comment-parser.h",
                "--",
                "",
                "-std=c++17",
                "-x",
                "c++",
                "-Wdocumentation",
                "-fparse-all-comments"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/bin",
            "environment": [],
            "console": "integratedTerminal"
        },
        {
            "name": "(Windows) Launch register-select",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/register-select.exe",
            "args": [
                "../register-tests/case-1/main.h",
                "-config",
                "../register-tests/case-1/config.cfg",
                "-log-level",
                "DEBUG",
                "--",
                "",
                "-std=c++17",
                "-x",
                "c++"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/bin",
            "environment": [],
            "console": "integratedTerminal"
        }
    ]
}